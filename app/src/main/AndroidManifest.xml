<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.iiitd.pcsma.coursecritic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".YourFriendsActivity"
            android:label="@string/title_activity_your_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".YourCoursesActivity"
            android:label="@string/title_activity_your_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PastCoursesActivity"
            android:label="@string/title_activity_past_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Top50Activity"
            android:label="@string/title_activity_top50"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecommendationsActivity"
            android:label="@string/title_activity_recommendations"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>